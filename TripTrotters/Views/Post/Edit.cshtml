@using TripTrotters.ViewModels;
@using TripTrotters.Services.Abstractions;
@model EditPostViewModel

<div class="row">
    <div class="col-md-6 offset-3">
        <h1 class="text-center mt-3">Edit the Post</h1>
        <form method="post" asp-action="Edit">
            <div class=" form-group mb-3">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class=" form-group mb-3">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Budget">Budget</label>
                <div class="input-group">
                    <span class="input-group-text">€</span>
                    <input asp-for="Budget" class="form-control">
                    <span asp-validation-for="Budget" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-lg btn-primary">Edit Apartment</button>
                <a class="btn btn-lg btn-secondary" asp-controller="Post" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>








