@model IEnumerable<Offer>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            @foreach(var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                       
                                </div>
                                <p class="card-text">@item.Title</p>
                                <p class="card-text">@item.Description</p>
                                <p class="card-text">@item.Apartment.Address.City</p>
                                <p class="card-text">Start date: @item.StartDate</p>
                                <p class="card-text">End date: @item.EndDate</p>
                           
                            
                            
                        </div>

              
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a asp-controller="offer" asp-action="Detail" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                        <a asp-controller="offer" asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a asp-controller="offer" asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">Delete</a>

                    </div>
                   
                </div>
                

            }
            
       
    </div>
</div>