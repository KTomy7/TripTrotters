 @using TripTrotters.Services.Abstractions;
@using TripTrotters.ViewModels;
@model OfferViewModel;

@inject IApartmentService _apartmentService;
@{
}
<form method = "post"  asp-action = "Create">
    <input type="hidden" id="AgentId" name="AgentId" asp-for="AgentId" />
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for = "Title" class="form-control" id= placeholder="Enter offer name">
        <span asp-validation-for = "Title" class = "text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" id= placeholder="Enter offer description">
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input asp-for="StartDate" type="datetime-local" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>

    </div>
        
    <div class="form-group">
        <label asp-for="EndDate">End Date</label>
        <input asp-for="EndDate" type="datetime-local" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="ApartmentId" class="control-label"></label>
            <select asp-for="ApartmentId" class="form-control">
                @foreach(var item in await _apartmentService.GetAll()){
                <option value="@item.Id">@item.Title</option>
                }
            </select>
        <span asp-validation-for="ApartmentId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Offer</button>

</form>